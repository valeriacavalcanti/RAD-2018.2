<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :dia %>
    <%= form.number_field :dia %>
  </div>

  <div class="field">
    <%= form.label :carga_horaria %>
    <%= form.number_field :carga_horaria %>
  </div>

  <%= form.fields_for :instructor do |instructor_fields| %>

    <div class="field">
      <%= instructor_fields.label :nome %>
      <%= instructor_fields.text_field :nome %>
    </div>

    <div class="field">
      <%= instructor_fields.label :matricula %>
      <%= instructor_fields.text_field :matricula %>
    </div>

    <div class="field">
      <%= instructor_fields.label :senha %>
      <%= instructor_fields.text_field :senha %>
    </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
